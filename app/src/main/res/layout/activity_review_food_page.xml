<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewFoodPage">
    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:layout_height="206dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/detailedimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/detailedimg" />
            <ImageButton
                android:background="@color/trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detailedbackbtn"
                android:layout_alignParentStart="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/foodreview"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/img"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Good"
        android:textColor="@color/orange"
        android:textSize="24dp" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/ratinged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingbar"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="40dp"
        android:hint="Write"
        android:paddingStart="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbtn"
        android:layout_width="258dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/signuproundedbtn"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="16dp" />


</RelativeLayout>