<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResturantProfilePage">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:src="@drawable/resturantcover"

                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:src="@drawable/backbtn"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="54dp">

            <androidx.cardview.widget.CardView

                android:id="@+id/card2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/backbtn"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:cardCornerRadius="45dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pizzahutimg" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/resturantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_centerHorizontal="true"
            android:text="Pizza Hut"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resturanttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resturantname"
            android:layout_centerHorizontal="true"
            android:text="4102  Pretty View Lanenda"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/restradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resturanttxt"
            android:layout_centerHorizontal="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIZZA" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHICKEN" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAST FOOD" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restradio"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/freeship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/free"
                android:drawablePadding="10dp"
                android:text="free delivery"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/foodTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableStart="@drawable/time"
                android:drawablePadding="10dp"
                android:text="30 - 35 min"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detailedstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:src="@drawable/detailedstar" />

            <TextView
                android:id="@+id/detailedrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailedreviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="(30+)"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailedsee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/seerevies"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/fettxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l2"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:text="Featured items"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />




    <androidx.cardview.widget.CardView
        android:id="@+id/featured_resycler_view_resturant"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_margin="10dp"
        android:layout_below="@id/fettxt"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/img"
                android:layout_height="230dp"
                app:cardCornerRadius="30dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/foodImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food1" />
                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="34dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/back">

                        <TextView
                            android:id="@+id/foodRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableEnd="@drawable/star"
                            android:drawablePadding="10dp"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like"
                        android:layout_alignEnd="@id/foodImage"
                        android:layout_margin="10dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Pizza Hand craft"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="free delivery"
                        android:drawableStart="@drawable/free"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"  />
                    <TextView
                        android:id="@+id/foodTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 - 35 min"
                        android:drawableStart="@drawable/time"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"  />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/foodType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burger"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:background="#F6F6F6"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"  />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken"
                        android:layout_weight="1"
                        android:background="#F6F6F6"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"  />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fast-Food"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:background="#F6F6F6"
                        android:textColor="@color/black"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"  />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>











    <androidx.cardview.widget.CardView
        android:id="@+id/card11"
        android:layout_below="@id/featured_resycler_view_resturant"
        android:layout_width="51dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="27dp"
        app:cardCornerRadius="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card22"
        android:layout_below="@id/featured_resycler_view_resturant"
        android:layout_toEndOf="@id/card11"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legends"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card33"
        android:layout_below="@id/featured_resycler_view_resturant"
        android:layout_toEndOf="@id/card22"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bundles"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card44"
        android:layout_below="@id/featured_resycler_view_resturant"
        android:layout_toEndOf="@id/card33"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsresycler_view_resturant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card44"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>



</RelativeLayout>