<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="215dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/popimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pop1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/popprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_bg"
                        android:text="$9.50"
                        android:padding="2dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="60dp"
                        android:src="@drawable/love"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:translationY="125dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/back">
            <TextView
                android:id="@+id/foodRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableEnd="@drawable/star"
                android:drawablePadding="10dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="160dp"
            android:padding="5dp"
            android:layout_marginStart="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red n hot pizza"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/popdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy chicken, beef"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>