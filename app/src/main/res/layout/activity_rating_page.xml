<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatingPage">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:src="@drawable/resturantcover"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/backbtn"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="54dp">

        <androidx.cardview.widget.CardView

            android:id="@+id/card2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/backbtn"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:cardCornerRadius="45dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pizzahutimg" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/resturantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_centerHorizontal="true"
        android:text="Pizza Hut"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resturanttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resturantname"
        android:layout_centerHorizontal="true"
        android:text="4102  Pretty View Lanenda"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ratimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/resturanttxt"
        android:layout_marginTop="10dp"
        android:src="@drawable/delivered"/>
    <TextView
        android:id="@+id/txtrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Rate Delivery Service"
        android:textSize="18dp"
        android:layout_below="@id/ratimg"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Good"
        android:textColor="@color/orange"
        android:textSize="24dp" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/ratinged"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/ratingbar"
        android:background="@drawable/edit_bg"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="10dp"
        android:hint="Write review"
        android:paddingStart="20dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbtn"
        android:layout_width="258dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signuproundedbtn"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="16dp" />
</RelativeLayout>