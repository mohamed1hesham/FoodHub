<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle3"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle4"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle2"
        android:layout_alignParentStart="true"

        />
    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbtn"
        android:background="@color/trans"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backbtn"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logintxt"
            android:layout_marginTop="12dp"
            android:text="E-mail"
            android:textColor="@color/gray"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailedtxt"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/emailtxt"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_bg"
            android:hint="Your email or phone"
            android:paddingStart="20dp" />

        <TextView
            android:id="@+id/passtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailedtxt"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textColor="@color/gray"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/passedtxt"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/passtxt"
            android:paddingStart="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_bg"
            android:hint="Password" />

        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passedtxt"
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:text="Forgot password?"

            android:textColor="@color/orange"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbtn"
            android:layout_width="258dp"
            android:layout_height="60dp"
            android:layout_below="@id/forgetpass"
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/signuproundedbtn"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_marginStart="70dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="3dp"
            android:text="Donâ€™t have an account?"
            android:textColor="@color/darkGray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/txtsign"
            android:text=" Sign Up"
            android:textColor="@color/orange"

            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtsignin"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:src="@drawable/blline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in with"
                android:textColor="@color/darkGray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:src="@drawable/blline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin1"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"


            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="139dp"
                android:layout_height="54dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/roundedbtn"
                android:drawableStart="@drawable/facebook"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"
                android:text="FACEBOOK" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="139dp"
                android:layout_height="54dp"
                android:background="@drawable/roundedbtn"
                android:drawableStart="@drawable/google"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"
                android:text="GOOGLE" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>