<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetails">
    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:layout_height="206dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/detailedimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/detailedimg" />
            <ImageButton
                android:id="@+id/backbtn"
                android:background="@color/trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detailedbackbtn"
                android:layout_alignParentStart="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detailedlove"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="24dp">

        <TextView

            android:id="@+id/detailedtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ground Beef Tacos"
            android:textColor="@color/black"
            android:textSize="31sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/detailedstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailedtxt"
            android:src="@drawable/detailedstar" />
        <TextView
            android:id="@+id/detailedrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_below="@id/detailedtxt"
            android:layout_toEndOf="@id/detailedstar"/>
        <TextView
            android:id="@+id/detailedreviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(30+)"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:layout_below="@id/detailedtxt"
            android:layout_toEndOf="@id/detailedrate"/>

        <TextView
            android:id="@+id/detailedsee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailedtxt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/detailedreviews"
            android:text="@string/seerevies"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/detailedprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$9.50"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="31sp"
            android:layout_below="@id/detailedsee"/>

        <ImageView
            android:id="@+id/detailedplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detailedplus"
            android:layout_below="@id/detailedsee"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/detailedcount"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailedsee"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/detailedplus"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/detailedminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/detailedsee"
            android:layout_toStartOf="@id/detailedcount"
            android:src="@drawable/detminus" />
        <TextView
            android:id="@+id/detaileddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9796A1"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/detailedprice"
            android:text="@string/detaileddetails"
            android:textStyle="bold"
            />
        <TextView

            android:id="@+id/detailedaddon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/detaileddetails"
            android:text="Choice of Add On"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/addon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addon1"
            android:layout_below="@id/detailedaddon"
            />
        <TextView
            android:id="@+id/addon1txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepper  julienned"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@id/addon1"
            android:layout_below="@id/detailedaddon"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            />
        <RadioButton
            android:id="@+id/addon1radio"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailedaddon"
            android:layout_marginTop="8dp"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+$2.30"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/gray"
            android:layout_toStartOf="@id/addon1radio"
            android:layout_below="@id/detailedaddon"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/addon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addon2"
            android:layout_below="@id/addon1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby spinach"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@id/addon1"
            android:layout_below="@id/addon1"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            />
        <RadioButton
            android:id="@+id/addon2radio"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addon1"
            android:layout_marginTop="8dp"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+$2.30"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/gray"
            android:layout_toStartOf="@id/addon1radio"
            android:layout_below="@id/addon1"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/addon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addon2"
            android:src="@drawable/addon3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addon2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/addon1"
            android:text="Masroom"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/addon3radio"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addon2"
            android:layout_marginTop="8dp"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+$2.30"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/gray"
            android:layout_toStartOf="@id/addon1radio"
            android:layout_below="@id/addon2"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            />

        <ImageButton
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addon3"
            android:layout_centerHorizontal="true"
            android:background="@color/trans"
            android:paddingTop="15dp"
            android:src="@drawable/detailedaddtocart"

            />




    </RelativeLayout>



</RelativeLayout>