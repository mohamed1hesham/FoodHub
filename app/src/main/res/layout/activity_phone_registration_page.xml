<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneRegistrationPage">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle3"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle4"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle2"
        android:layout_alignParentStart="true"

        />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/trans"
        android:src="@drawable/backbtn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backbtn"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="230dp">

        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/regtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logintxt"
            android:layout_marginTop="8dp"
            android:text="@string/regtxt"
            android:textColor="@color/gray"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailedtxt"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/regtxt"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_bg"
            android:paddingStart="140dp" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regtxt"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_marginTop="33dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regbtn"
            android:layout_width="258dp"
            android:layout_height="60dp"
            android:layout_below="@id/emailedtxt"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/signuproundedbtn"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>
</RelativeLayout>