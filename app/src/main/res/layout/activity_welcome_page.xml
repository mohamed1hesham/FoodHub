<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcomebackground"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcomebackshadow" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skipbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/roundedbtn"
        android:fontFamily="sans-serif"

        android:text="Skip"
        android:textColor="#FE724C"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/welcometxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/welcometofoodhub"
        android:layout_below="@+id/skipbtn"/>
        <ImageView
            android:id="@+id/favtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcometxt"
            android:layout_marginTop="19dp"
            android:src="@drawable/yourfavoritefoodsdelivered"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line"
                android:layout_marginEnd="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=" sign in with " />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line"
                android:layout_marginStart="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"


            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="139dp"
                android:layout_height="54dp"
                android:background="@drawable/roundedbtn"
                android:drawableStart="@drawable/facebook"
                android:text="FACEBOOK"
                android:layout_marginEnd="22dp"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="139dp"
                android:layout_height="54dp"
                android:background="@drawable/roundedbtn"
                android:drawableStart="@drawable/google"
                android:text="GOOGLE"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"
                />

        </LinearLayout>
        <ImageButton
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signinbtn"
            android:background="@color/trans"
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/signintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="23dp"
            />


    </LinearLayout>












</RelativeLayout>


</RelativeLayout>